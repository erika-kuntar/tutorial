<p id="notice"><%= notice %></p>

<h1>Puppies</h1>

<table>
  <thead>
    <tr>
      <th>Breed</th>
      <th>Love</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @puppies.each do |puppy| %>
      <tr>
        <td><%= puppy.breed %></td>
        <td><%= puppy.love %></td>
        <td><%= image_tag puppy.image_file %></td>
        <td><%= pluralize(puppy.number_of_puppies, 'puppy') %></td>
        <td><%= link_to 'Show', puppy %></td>
        <td><%= link_to 'Edit', edit_puppy_path(puppy) %></td>
        <td><%= link_to 'Destroy', puppy, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Puppy', new_puppy_path %>
