<%= form_with(model: puppy, local: true) do |form| %>
  <% if puppy.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(puppy.errors.count, "error") %> prohibited this puppy from being saved:</h2>

      <ul>
      <% puppy.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :breed %>
    <%= form.text_field :breed %>
  </div>

  <div class="field">
    <%= form.label :love %>
    <%= form.number_field :love %>
  </div>

  <div class="field">
    <%= form.label :image_file %>
    <%= form.text_field :image_file, size: "5", placeholder: "GIF, JPG or PNG file name" %>
  </div>

  <div class="field">
    <%= form.label :number_of_puppies %>
    <%= form.number_field :number_of_puppies %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
